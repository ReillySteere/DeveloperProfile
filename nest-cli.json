{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "server/assets/**/*", "outDir": "dist/src" },
      {
        "include": "../architecture/**/*",
        "outDir": "dist/architecture",
        "watchAssets": false
      },
      {
        "include": "../public/data/*",
        "outDir": "dist/public",
        "watchAssets": false
      }
    ],
    "deleteOutDir": true
  }
}
